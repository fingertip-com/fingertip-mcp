{
  "name": "@fingertip/mcp",
  "description": "MCP server for Fingertip API integration",
  "version": "1.0.15",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "fingertip-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "check:formatting": "prettier --check . --ignore-path .checkignore",
    "check:linting": "eslint . --ignore-path .checkignore",
    "check:types": "tsc --noEmit",
    "watch:types": "tsc --noEmit --incremental --watch",
    "fix:formatting": "prettier --write . --ignore-path .checkignore",
    "fix:linting": "eslint . --fix --ignore-path .checkignore"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fingertip-com/fingertip-mcp.git"
  },
  "keywords": [
    "mcp",
    "todoist",
    "claude",
    "ai",
    "task-management"
  ],
  "author": "fingertip-com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fingertip-com/fingertip-mcp/issues"
  },
  "homepage": "https://github.com/fingertip-com/fingertip-mcp#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.6.1",
    "fingertip": "^0.12.0",
    "node-fetch-native": "^1.6.6",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.26.4",
    "@babel/core": "^7.26.10",
    "@babel/node": "^7.26.0",
    "@babel/plugin-transform-optional-chaining": "^7.25.9",
    "@babel/preset-env": "^7.26.9",
    "@fingertip/eslint-config": "^1.0.10",
    "@fingertip/prettier-config": "^1.0.2",
    "@types/node": "^22.13.10",
    "babel-plugin-module-resolver": "^5.0.2",
    "shx": "^0.3.4",
    "typescript": "^5.8.2"
  }
}
